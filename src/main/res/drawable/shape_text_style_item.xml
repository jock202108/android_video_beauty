<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape>
            <stroke android:color="#54ffffff" android:width="0.5dp"/>
            <corners android:radius="5dp"/>
            <size android:height="27dp" android:width="64dp"/>
        </shape>
    </item>

   <item android:state_selected="true">
       <shape>
           <stroke android:color="@color/lsq_color_white" android:width="2dp"/>
           <corners android:radius="5dp"/>
           <size android:height="27dp" android:width="64dp"/>
       </shape>
   </item>

</selector>