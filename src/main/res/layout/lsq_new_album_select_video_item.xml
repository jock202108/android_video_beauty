<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginLeft="0.5dp"
    android:layout_marginRight="0.5dp"
    android:layout_marginTop="1dp"
    android:layout_height="125dp">

    <ImageView
        android:id="@+id/lsq_video_thumb_view"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@color/lsq_color_black"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/lsq_movie_selected_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/lsq_movie_selected_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/lsq_video_thumb_view"
            android:layout_alignTop="@id/lsq_video_thumb_view"
            android:layout_marginLeft="@dimen/lsq__space_5"
            android:layout_marginTop="@dimen/lsq__space_5"
            android:layout_marginRight="@dimen/lsq__space_10"
            android:layout_marginBottom="@dimen/lsq__space_10"
            android:background="@drawable/edit_heckbox_unsel"
            android:gravity="center"
            android:textColor="@color/lsq_color_black" />
    </FrameLayout>

    <TextView
        android:id="@+id/lsq_movie_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="@dimen/lsq__space_5"
        android:layout_marginBottom="6dp"
        android:background="@drawable/lsq_filters_mixed_backgroud"
        android:gravity="right"
        android:textColor="@color/lsq_color_white"
        android:textSize="12sp" />

</RelativeLayout>