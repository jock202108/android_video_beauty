    <RelativeLayout
        android:id="@+id/lsq_titleWrapView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/lsq_titleView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:text="@string/lsq_filter_set_mixied"
            android:textColor="@color/lsq_seekbar_drag_color"
            android:textSize="11sp" />

    </RelativeLayout>

    <include
        android:id="@+id/lsq_seekView"
        layout="@layout/tusdk_widget_seekbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/lsq_titleWrapView"
        android:minHeight="30dp" />

    <!--浮动在seekbar上面的比例数字-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/lsq_titleWrapView"
        android:layout_marginBottom="-16dp"
        android:layout_above="@+id/lsq_seekView"
        >

        <TextView
            android:id="@+id/lsq_filter_configValueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text=""
            android:textColor="@color/lsq_seekbar_drag_color"
            android:textSize="11sp" />
    </RelativeLayout>

