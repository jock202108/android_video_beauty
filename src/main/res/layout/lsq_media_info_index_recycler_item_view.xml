<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/lsq_rl_gallery"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lsq_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_toRightOf="@+id/cd_iv_gallery"
        android:textColor="@color/lsq_color_black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/lsq_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/cd_iv_gallery"
        android:layout_below="@+id/lsq_item_title"
        android:text="1"
        android:textColor="#6E7187"
        android:textSize="13sp" />



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cd_iv_gallery"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/iv_preview"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_gallery_choose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_galley_choose"
        android:visibility="invisible" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_alignParentBottom="true"
        android:background="@color/lsq_dialog_divider" />
</RelativeLayout>