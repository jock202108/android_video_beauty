<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lsq_color_white</item>
        <item name="colorPrimaryDark">@color/lsq_color_white</item>
        <item name="colorAccent">@color/lsq_color_white</item>
    </style>

    <!-- Base application theme. -->
    <style name="lsq_sdkBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="lsq_sdkTheme" parent="lsq_sdkBaseTheme"></style>

    <!-- 全屏 断点续拍 -->
    <style name="lsq_record_progress_full_screen">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/tusdk_record_progress_full_screen</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <!-- camera controll Option for full screen -->
    <style name="lsq_camera_OptionButton_full_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lsq_audio_mixer_button">
        <item name="android:background">@drawable/tusdk_view_api_button_roundcorner</item>
        <item name="android:textColor">@color/lsq_color_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">34dp</item>
    </style>



    <!--BottomSheetDialog弹窗2，圆角没问题-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <declare-styleable name="TabPagerIndicator">
        <attr name="default_display_counts" format="integer"></attr>
        <attr name="normal_text_color" format="color"/>
        <attr name="fixed_width" format="boolean"/>
        <attr name="high_light_text_color" format="color"/>
        <attr name="text_size" format="integer"/>
        <attr name="line_color" format="color"/>
        <attr name="line_size" format="integer"/>
        <attr name="item_width" format="integer"/>
        <attr name="line_width" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="HorizontalProgressBar">
        <attr name="background_color" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="defaultHeight" format="dimension"/>
    </declare-styleable>



    <declare-styleable name="MovieScrollContent">
        <attr name="cursorHeight" format="dimension"/>
        <attr name="coverListHeight" format="dimension"/>
        <attr name="coverListTopMargin" format="dimension"/>
        <attr name="outlineType" format="integer"/>
    </declare-styleable>
    
    <declare-styleable name="TuSeekBarPressure">
    </declare-styleable>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!--对话框动画-从屏幕中弹出(抖动)-->
    <style name="promptdialog_anim">
        <item name="android:windowEnterAnimation">@anim/promptdialog_in</item>
        <item name="android:windowExitAnimation">@anim/promptdialog_out</item>
    </style>

    <style name="FullTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <declare-styleable name="CircleRelativeLayoutLayout">
        <attr name="background_color_1" format="color" />
        <attr name="background_alpha_1" format="integer" />
    </declare-styleable>
    <declare-styleable name="MusicCropView">
        <attr name="mt_line_w" format="dimension" />
        <attr name="mt_line_max_h" format="dimension" />
        <attr name="mt_line_min_h" format="dimension" />
        <attr name="mt_line_color" format="color" />
        <attr name="mt_line_progress_color" format="color" />
    </declare-styleable>
</resources>
